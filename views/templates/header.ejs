  <!-- 🔥 Script para manejar sesión -->
 <script>
  document.addEventListener("DOMContentLoaded", () => {
    const token = localStorage.getItem("token");

    if (token) {
      try {
        // Decodifica el payload del JWT
        const payload = JSON.parse(atob(token.split(".")[1]));
        const exp = payload.exp * 1000; // convierte a milisegundos
        const tiempoRestante = exp - Date.now();

        if (tiempoRestante <= 0) {
          // Token ya expiró
          localStorage.removeItem("token");
          alert("🔒 Tu sesión se cerró por seguridad. Inicia sesión nuevamente.");
          window.location.href = "/login";
        } else {
          // Configura un temporizador para que avise cuando expire
          setTimeout(() => {
            localStorage.removeItem("token");
            alert("🔒 Tu sesión se cerró por seguridad. Inicia sesión nuevamente.");
            window.location.href = "/login";
          }, tiempoRestante);
        }
      } catch (err) {
        console.error("Token inválido o dañado", err);
        localStorage.removeItem("token");
        window.location.href = "/login";
      }
    }
  });
</script>


  <!-- Espaciado para el contenido -->

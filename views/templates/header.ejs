  <!-- Espaciado para el contenido -->
  <div style="margin-top: 70px;"></div>

  <!-- Script de control de sesi贸n -->
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const token = localStorage.getItem("token");
      const btnLogout = document.getElementById("btnLogout");

      if (token) {
        try {
          // Decodificar el JWT
          const payload = JSON.parse(atob(token.split(".")[1]));
          const exp = payload.exp * 1000;
          const tiempoRestante = exp - Date.now();

          // Mostrar el bot贸n de cerrar sesi贸n
          btnLogout.classList.remove("d-none");

          //  Acci贸n al hacer clic en "Cerrar sesi贸n"
          btnLogout.addEventListener("click", () => {
            localStorage.removeItem("token");
            alert(" Sesi贸n cerrada correctamente.");
            window.location.href = "/login";
          });

          //  Si el token ya expir贸
          if (tiempoRestante <= 0) {
            localStorage.removeItem("token");
            alert(" Tu sesi贸n se cerr贸 por seguridad. Inicia sesi贸n nuevamente.");
            window.location.href = "/login";
          } else {
            //  Cierre autom谩tico al expirar
            setTimeout(() => {
              localStorage.removeItem("token");
              alert(" Tu sesi贸n se cerr贸 por seguridad. Inicia sesi贸n nuevamente.");
              window.location.href = "/login";
            }, tiempoRestante);
          }
        } catch (err) {
          console.error("Token inv谩lido o da帽ado", err);
          localStorage.removeItem("token");
          window.location.href = "/login";
        }
      } else {
        // Si no hay token, ocultamos el bot贸n
        btnLogout.classList.add("d-none");
      }
    });
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
